#:import hex kivy.utils.get_color_from_hex


<GerenciarTelas>:
    TelaCadastroService:


<TelaCadastroService>:
    id: telacads
    name: 'telacad_service'
    canvas.before:
        Color:
            rgba: hex('#CCCCCC')
        Rectangle:
            pos: self.pos
            size: self.size
    AnchorService:


<AnchorService>:
    canvas.before:
        Color:
            rgba: hex('#AAAAAA')
        Rectangle:
            pos: self.pos
            size: self.size

    orientation: 'vertical'
    size_hint_y: .5
    pos_hint: {'top' : 0.8}


    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: .05
        Label:
            text: 'Data de Inicio: '
        TextInput:
            id: campodatai
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: .05
        Label:
            text: 'Data de Termino: '
        TextInput:
            id: campodataf


    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: .05
        Label:
            text: 'Hora inicial: '
        TextInput:
            id: campohorai
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: .05
        Label:
            text: 'Hora Final: '
        TextInput:
            id: campohoraf


    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: .05
        Label:
            text: 'Cliente : '
        TextInput:
            id: campocliente
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: .05
        Label:
            text: 'Responsavel: '
        TextInput:
            id: camporespons
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: .05
        Label:
            text: 'Equipamento: '
        TextInput:
            id: campoequip

    Button:
        text: 'Cadastrar'
        on_release: root.cadastrar()
        on_release: root.parent.changetoMenu()
        size_hint_y: .05

    Button:
        text: 'Voltar para menu'
        on_release: root.parent.changetoMenu()
        size_hint_y: .05
