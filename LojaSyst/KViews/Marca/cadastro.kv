#:import hex kivy.utils.get_color_from_hex


<GerenciarTelas>:
    TelaCadastroMarca:


<TelaCadastroMarca>:
    id: telacads
    name: 'telacad_marca'
    canvas.before:
        Color:
            rgba: hex('#CCCCCC')
        Rectangle:
            pos: self.pos
            size: self.size
    AnchorMarca:


<AnchorMarca>:
    canvas.before:
        Color:
            rgba: hex('#AAAAAA')
        Rectangle:
            pos: self.pos
            size: self.size

    orientation: 'vertical'
    size_hint_y: .5
    pos_hint: {'top' : 0.8}

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: .05
        Label:
            text: 'Nome da Marca: '
        TextInput:
            id: camponome



    Button:
        text: 'Cadastrar'
        on_release: root.cadastrar()
        on_release: root.parent.changetoMenu()
        size_hint_y: .05

    Button:
        text: 'Voltar para menu'
        on_release: root.parent.changetoMenu()
        size_hint_y: .05



<Meucampo@BoxLayout>:
    orientation: 'horizontal'
    size_hint_y: .05
    Label:
        id: labelcampo
        text: ''
    TextInput:
        id: textinputcampo